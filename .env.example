# Variables de entorno de ejemplo para desarrollo local.
# Cambia contrasenas y secretos en produccion.

# Base de datos (el backend usara DB_HOST=mysql dentro de Docker).
DB_HOST=mysql
DB_PORT=3306
DB_USER=appuser
DB_PASSWORD=apppass
DB_NAME=deportesdb

# JWT
JWT_SECRET=changeme

# Servidor backend
SERVER_PORT=8080
APP_ENV=dev

# MySQL (para el contenedor mysql)
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=deportesdb
MYSQL_USER=appuser
MYSQL_PASSWORD=apppass
